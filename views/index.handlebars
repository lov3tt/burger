<div class="container">
  <div class="row">
    <div class="col text-center"  id="logo">
      <h2>EAT DA BURGER</h2>
    </div>
    <div class="col text-center" class="task" id="input">
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
        <div class="col text-center">
          <form method="POST" action="/api/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="burgerType" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">DEVOUR!</button>!</button>
          </form>
        </div>

        {{/unless}}
        {{/each}}
      </div>

    </div>

    <div class="text-center" class="task">
      {{#each burger_data}}
      {{#if this.devoured}}
      <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class = "container">
  <div class ="row">

    <div class="col text-center enter_section">
      <form action="/api/burgers" method="POST">
      <input type="text" name="burgerName" class="form-control"
      id="userInput">
      <button type="submit" class="btn btn-primary" id="inputBtn">Submit</button>
      </form>
      <p>Type in da burger you would like to nom nom nom next!</p>
    </div>

  </div>
</div>
